<p id="notice"><%= notice %></p>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col s12 m3">
        <div class="card" style="height: 300px; max-height: 300px;">
          <div class="card-image">
            <img src=<%="#{category.image}" %>>
            <%= link_to category_path(category), class: "btn-floating halfway-fab waves-effect waves-light green" do %>
              <i class="material-icons">search</i>
            <% end %>
          </div>
          <div class="card-content">
            <span class="card-title blue-text"><%= category.name %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="divider"></div>
  <%= link_to notes_path, class: "btn waves-effect waves-light" do %>
    <i class="material-icons right">send</i>Atras
  <% end %>
