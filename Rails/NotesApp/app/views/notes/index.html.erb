<div class="row">
  <div class="col s12 center">
    <% @title ||="Todas la Notas"%>

    <%= link_to new_note_path, class: "btn waves-effect waves-light red" do %>
      <i class="material-icons right">add</i>Agregar
    <% end %>

    <div class="row">
      <% if !@notes.nil? && @notes.count > 0%>
        <% @notes.each do |note| %>
          <div class="col m4 s6 l4">
            <div class="card blue-grey darken-1 hoverable" style="min-height: 300px;">
              <div class="card-content white-text">
                <span class="card-title truncate"><%= note.title %></span>
                <div class="divider"></div>
                <p class="truncate"><%= note.body %></p>
                <br />
                <p class="right-align">Por: <%= note.user.name %></p>
              </div>
              <div class="divider"></div>
              <div class="card-action blue-text darken-4">
                <div class="row" style="margin-bottom: 0px">
                  <div class="col s12 center">
                    <% if note.flag==true %>
                      <span>Importante</span>|
                    <% end %>
                    <span>Categoria: <%= note.category.name %></span>|
                    <span>Numero de Vistas: <%= note.num_views %></span>
                  </div>
                  <div class="col s12 right-align">
                    <% if note.flag==true %>
                      <a class="btn-floating btn-large waves-effect waves-light grey tooltipped" data-delay="50" data-tooltip="Importante"><i class="material-icons">warning</i></a>
                    <% end %>
                    <%= link_to note_path(note), class: "btn-floating btn-large waves-effect waves-light green" do %>
                      <i class="material-icons right">search</i>
                    <% end %>
                    <% if note.user_id == current_user.id %>
                      <%= link_to edit_note_path(note), class: "btn-floating btn-large waves-effect waves-light yellow" do %>
                        <i class="material-icons right">edit</i>
                      <% end %>
                      <%= link_to note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-floating btn-large waves-effect waves-light red" do %>
                        <i class="material-icons">delete</i>
                      <% end %>
                    <% end %>
                  </div>
                </div> 
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <h3>No se encontraron Notas :(</h3>
      <% end %>
    </div>
  </div>
</div>