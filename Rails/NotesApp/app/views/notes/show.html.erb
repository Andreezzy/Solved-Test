<div class="row">
  <div class="col s12 m2">.</div>
  <div class="col s12 m8 center">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @note.title %></span>
        <p><%= @note.body %></p>
        <br />
        <p class="right-align">Por: <%= @note.user.name %></p>
      </div>
      <div class="card-action white-text">
        <div class="row" style="margin-bottom: 0px">
          <div class="col s8 m9 center">
            <% if @note.flag==true %>
              <span>Importante</span>|
            <% end %>
            <span>Categoria: <%= @note.category.name %></span>|
            <span>Numero de Vistas: <%= @note.num_views %></span>
          </div>
          <div class="col s4 m3">
            <% if @note.user_id == current_user.id %>
              <%= link_to edit_note_path(@note), class: "btn-floating btn-large waves-effect waves-light yellow" do %>
                <i class="material-icons right">edit</i>
              <% end %>
              <%= link_to @note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-floating btn-large waves-effect waves-light red" do %>
                <i class="material-icons">delete</i>
              <% end %>
            <% end %>
          </div>
        </div>      
      </div>
    </div>
    <%= link_to notes_path, class: "btn waves-effect waves-light" do %>
      <i class="material-icons right">send</i>Atras
    <% end %>
  </div>
  <div class="col s12 m2">.</div>
</div>